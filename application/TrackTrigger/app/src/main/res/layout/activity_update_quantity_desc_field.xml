<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    tools:context=".AddQuantityField">
    <ImageView
        android:id="@+id/imageUpdate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_add_photo_alternate_24"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:id="@+id/Title"
        style="@style/EditorFieldStyle"
        android:hint="Title"/>
    <EditText
        android:id="@+id/Quantity_desc"
        style="@style/EditorFieldStyle"
        android:hint="Quantity/Description"/>
    <Button
        android:id="@+id/UpdateQuantity_descField"
        style="@style/ButtonStyle"
        android:text="Edit Field"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/DeleteQuantity_descField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:text="Delete Field"/>

</LinearLayout>